<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.haerul.MealsRecipes">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/meals_recipes_background"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/meals_recipes_background"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"

        >
        <activity
            android:name="com.haerul.MealsRecipes.view.home.HomeActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.haerul.MealsRecipes.view.category.CategoryActivity"
            android:label="Category"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.haerul.MealsRecipes.view.detail.DetailActivity"
            android:theme="@style/AppTheme.NoActionBar"


            />
    </application>

</manifest>